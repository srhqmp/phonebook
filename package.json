{
  "name": "phonebook",
  "version": "1.0.0",
  "description": "Phonebook application",
  "main": "index.js",
  "scripts": {
    "build:ui": "rm -rf dist && cd ./frontend/ && npm run build && cp -r dist ../",
    "deploy": "flyctl deploy",
    "deploy:full": "npm run build:ui && npm run deploy",
    "lint": "eslint .",
    "logs:prod": "flyctl logs",
    "test": "NODE_ENV=test node --test",
    "start": "NODE_ENV=production node backend/index.js",
    "client": "npm run dev --prefix frontend",
    "dev": "NODE_ENV=development concurrently \"nodemon backend/index.js \" \"npm run client\""
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-async-errors": "^3.1.1",
    "mongoose": "^8.3.4",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@flydotio/dockerfile": "^0.5.7",
    "@stylistic/eslint-plugin-js": "^2.0.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "globals": "^15.1.0",
    "nodemon": "^3.1.0",
    "supertest": "^7.0.0"
  }
}
